var show_type = "<%= j (params[:type]) %>"

if (show_type == "lottery_result") {
    document.getElementById("table_result").style.display = 'inline';
    document.getElementById("table_statistic").style.display = 'none';
    document.getElementById("chart_lot").style.display = 'none';
} else if (show_type == "lottery_number") {
    document.getElementById("table_result").style.display = 'none';
    document.getElementById("table_statistic").style.display = 'inline';
    document.getElementById("chart_lot").style.display = 'none';
} else if (show_type == "lottery_chart") {
    document.getElementById("table_result").style.display = 'none';
    document.getElementById("table_statistic").style.display = 'none';
    document.getElementById("chart_lot").style.display = 'block';
}